// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String  
  email     String  @unique
  password  String
  bugs      Bug[]
  comments  Comment[]
}

model Project {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String    @unique
  desc      String
  createdAt DateTime  @default(now())
  bugs      Bug[]
}

model Bug {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  desc      String
  category  String
  createdAt DateTime  @default(now())
  comments  Comment[]
  progress  String
  severity  Int
  author    User?     @relation(fields:[bugId], references: [id])
  project   Project?  @relation(fields:[bugId], references: [id])
  bugId     String?   @db.ObjectId
}

model Comment {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime  @default(now())
  content   String
  author    User?     @relation(fields:[commentId], references: [id])
  bug       Bug?      @relation(fields:[commentId], references: [id])
  commentId String?   @db.ObjectId
}
